{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Update Todo Request Schema",
  "type": "object",
  "properties": {
    "body": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "done": {
          "type": "boolean"
        }
      },
      "required": ["name", "dueDate", "done"]
    }
  }
}
